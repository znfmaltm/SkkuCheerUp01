<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kgh.skkucheerup.Settings">

    <TextView
        android:id="@+id/nicknameSet"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="TextView"
        android:textSize="22sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nicknameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:privateImeOptions='"defaultInputmode=korean"'
                android:text="Name" />

            <Button
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCheckClicked"
                android:text="중복확인" />
        </LinearLayout>

        <Button
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onNicknameSettingClicked"
            android:text="닉네임 설정" />

        <TextView
            android:id="@+id/알림"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="자과캠 알림"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch12"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="인사캠 알림"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch13"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="즐겨찾기 3일전 알림"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/page4"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#cc000000"
        android:elevation="13dp"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/buttonMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onmain1Clicked"
            android:text="메인페이지" />

        <Button
            android:id="@+id/buttonPast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onPastClicked"
            android:text="지난 채용공고" />

        <Button
            android:id="@+id/buttonFav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onFavoriteClicked"
            android:text="즐겨찾기 목록" />

        <Button
            android:id="@+id/buttonMy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마이페이지" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container4"
        android:layout_width="match_parent"
        android:layout_height="476dp"
        android:elevation="12dp"
        android:orientation="horizontal"
        android:visibility="gone">

    </LinearLayout>
</FrameLayout>
